  <div class="border">
    <div class="mb-3 ">
      <%= form_with model: @entry do |f| %>
        <label class="form-label">作品タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">紹介文</label>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label class="form-label">作品イメージ画像</label>
      <%= f.file_field :photo %>
    </div>
      <%= f.submit '作成', class: "btn btn-primary" %>
      <% end %>
