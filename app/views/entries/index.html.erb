</div>

  <div class="container">
    <div class="row">
      <% @entries.each do |entry| %>
      <div class="col-6 p-2">
        <div class="dotted-line rounded-3 p-2">
          <div class="row">
            <div class="col-md-4"> 
              <% if entry.photo? %>
                <%= image_tag entry.photo.url%>
              <% end %>
            </div>
            <div class="col-md-4">
            <div class="card-body">
              <div class="card-title">
                <%= entry.title %> 
              </div>
              <div class="card-text">
                <%= entry.description %>
              </div>
            </div>
            </div>
          </div>
        </div>
